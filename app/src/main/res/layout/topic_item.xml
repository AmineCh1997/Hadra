<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:layout_marginBottom="30dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/item_topic_tv_topic_user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="4dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_topic_tv_topic_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="casual"
                android:text="Selim1996"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="65dp"
                tools:layout_editor_absoluteY="16dp" />


            <TextView
                android:id="@+id/item_topic_tv_topic_date"
                android:layout_width="62dp"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="casual"
                android:text="10/02/2019 10:47"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                tools:layout_editor_absoluteX="65dp"
                tools:layout_editor_absoluteY="42dp" />


        </LinearLayout>


        <TextView
            android:id="@+id/item_topic_tv_topic_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:text="#Election"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="17dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>


    </LinearLayout>


    <TextView
        android:id="@+id/item_topic_tv_topic_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="casual"
        android:text="What do you think about the 2019 elections in tunisia ?"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="72dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            app:srcCompat="@android:drawable/ic_menu_view"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="107dp" />


        <TextView
            android:id="@+id/item_topic_tv_topic_watchs"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="18dp"
            android:fontFamily="casual"
            android:text="33"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="113dp"
            android:layout_marginLeft="2dp"/>

        <Switch
            android:id="@+id/item_topic_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:text=" "
            android:textColor="#F00606"
            android:visibility="visible"
            tools:layout_editor_absoluteX="352dp"
            tools:layout_editor_absoluteY="107dp" />


    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#FFFFFF"
        android:layout_marginBottom="5dp"/>

</LinearLayout>